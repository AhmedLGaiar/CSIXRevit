<Window x:Class="ToEtabs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModels="clr-namespace:ToEtabs.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel, IsDesignTimeCreatable=False}"
        xmlns:local="clr-namespace:ToEtabs"
        mc:Ignorable="d"
        Title="FromRevitToEtabs" Height="250" Width="200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0 2.5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#00008b" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2875b9" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Gray" />
                    <Setter Property="Foreground" Value="LightGray" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ComboBox Width="150" HorizontalAlignment="Right"
                  ItemsSource="{Binding DefinedConcreteMatrial}"
                  SelectedItem="{Binding SelectedConcreteMaterial, Mode=TwoWay}"
                  Margin="0 5" />

        <StackPanel Grid.Row="1">
            <CheckBox Content="Columns" IsChecked="{Binding IsColumnsChecked}" />
            <CheckBox Content="Walls" IsChecked="{Binding IsWallsChecked}" />
            <CheckBox Content="Beams" IsChecked="{Binding IsBeamsChecked}" />
            <CheckBox Content="Slabs" IsChecked="{Binding IsSlabsChecked}" />
        </StackPanel>

        <Button Grid.Row="2" Content="Import Elements" Command="{Binding ExportElementsCommand}"
                Margin="0 5" />
    </Grid>
</Window>